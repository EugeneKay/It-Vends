# Enable URL rewriting
RewriteEngine On

# Force usage of correct domain
RewriteCond %{SERVER_PORT} ^80$
RewriteCond %{HTTP_HOST} !^itvends\.com$ [NC]
RewriteRule ^(.*)$ http://itvends.com/$1 [L,R=301]
RewriteCond %{SERVER_PORT} ^443$
RewriteCond %{HTTP_HOST} !^itvends\.com$ [NC]
RewriteRule ^(.*)$ https://itvends.com/$1 [L,R=301]
